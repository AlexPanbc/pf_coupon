<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="off">
    <appenders>
        <console name="CONSOLE" target="SYSTEM_OUT">
            <patternLayout charset="UTF-8" pattern="%date{yyyy-MM-dd_HH:mm:ss}[%-5level]%logger[%L]-%message%n"/>
        </console>

        <rollingFile name="ROLLINGFILE_DEBUG"
                     fileName="/data/logs/app_logs/pf_coupon/debug.log"
                     filePattern="/data/logs/app_logs/pf_coupon/debug.log.%date{yyyyMMdd}">
            <filters>
                <thresholdFilter level="info" onMatch="DENY" onMismatch="NEUTRAL"/>
                <thresholdFilter level="debug" onMatch="ACCEPT" onMismatch="DENY"/>
            </filters>
            <patternLayout charset="UTF-8" pattern="%date{yyyy-MM-dd_HH:mm:ss}[%-5level]%logger[%L]-%message%n"/>
            <policies>
                <timeBasedTriggeringPolicy/>
            </policies>
        </rollingFile>

        <rollingFile name="ROLLINGFILE_INFO"
                     fileName="/data/logs/app_logs/pf_coupon/info.log"
                     filePattern="/data/logs/app_logs/pf_coupon/info.log.%date{yyyyMMdd}">
            <filters>
                <thresholdFilter level="warn" onMatch="DENY" onMismatch="NEUTRAL"/>
                <thresholdFilter level="info" onMatch="ACCEPT" onMismatch="DENY"/>
            </filters>
            <patternLayout charset="UTF-8" pattern="%date{yyyy-MM-dd_HH:mm:ss}[%-5level]%logger[%L]-%message%n"/>
            <policies>
                <timeBasedTriggeringPolicy/>
            </policies>
        </rollingFile>

        <rollingFile name="ROLLINGFILE_WARN"
                     fileName="/data/logs/app_logs/pf_coupon/warn.log"
                     filePattern="/data/logs/app_logs/pf_coupon/warn.log.%date{yyyyMMdd}">
            <filters>
                <thresholdFilter level="error" onMatch="DENY" onMismatch="NEUTRAL"/>
                <thresholdFilter level="warn" onMatch="ACCEPT" onMismatch="DENY"/>
            </filters>
            <patternLayout charset="UTF-8" pattern="%date{yyyy-MM-dd_HH:mm:ss}[%-5level]%logger[%L]-%message%n"/>
            <policies>
                <timeBasedTriggeringPolicy/>
            </policies>
        </rollingFile>

        <rollingFile name="ROLLINGFILE_ERROR"
                     fileName="/data/logs/app_logs/pf_coupon/error.log"
                     filePattern="/data/logs/app_logs/pf_coupon/error.log.%date{yyyyMMdd}">
            <filters>
                <thresholdFilter level="error" onMatch="ACCEPT" onMismatch="DENY"/>
            </filters>
            <patternLayout charset="UTF-8" pattern="%date{yyyy-MM-dd_HH:mm:ss}[%-5level]%logger[%L]-%message%n"/>
            <policies>
                <timeBasedTriggeringPolicy/>
            </policies>
        </rollingFile>

        <async name="ASYNC_APPENDER">
            <appenderRef ref="CONSOLE"/>
            <appenderRef ref="ROLLINGFILE_DEBUG"/>
            <appenderRef ref="ROLLINGFILE_INFO"/>
            <appenderRef ref="ROLLINGFILE_WARN"/>
            <appenderRef ref="ROLLINGFILE_ERROR"/>
        </async>

    </appenders>

    <loggers>
        <logger name="com.yuelvhui" level="ERROR" additivity="false">
            <appender-ref ref="ASYNC_APPENDER"/>
        </logger>

        <root level="INFO">
            <appender-ref ref="ASYNC_APPENDER"/>
        </root>
    </loggers>
</configuration>
